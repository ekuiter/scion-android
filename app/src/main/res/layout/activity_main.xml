<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dispbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dispbutton"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sciondbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sciondbutton"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pingpongbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pingpongbutton"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pingpongcmdline"
            android:labelFor="@id/pingpongcmdline">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pingpongcmdline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textVisiblePassword"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
