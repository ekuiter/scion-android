<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity"
                android:gravity="center"
                android:layout_margin="12sp"
                android:focusableInTouchMode="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scionbutton"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="128sp"
                    android:layout_height="128sp"
                    android:layout_margin="24sp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="64sp"
                    app:icon="@drawable/ic_scion_logo"
                    app:iconGravity="end"
                    app:iconPadding="0dp"
                    app:iconSize="96sp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pingAddressHint">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pingAddressEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:alignContent="stretch"
                    android:layout_marginTop="24sp">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/vpnClient"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/vpnClient"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/dispatcher"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/dispatcher"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/daemon"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/daemon"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/borderRouter"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/borderRouter"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/beaconServer"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/beaconServer"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/certificateServer"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/certificateServer"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/pathServer"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/pathServer"
                            android:layout_marginEnd="10sp"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/scmp"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_chip"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipIconSize="18sp"
                            app:chipStartPadding="8sp"
                            android:text="@string/scmp"
                            android:layout_marginEnd="10sp"/>
                </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
</ScrollView>